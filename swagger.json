{
    "swagger": "2.0",
    "info": {
        "title": "DAEGU HISTORY API",
        "version": "1.0.0"
    },
    "host": "localhost:8080",
    "schemes": ["http"],
    "paths": {
        "/api/user/login": {
            "post": {
                "summary": "로그인",
                "description": "사용자가 로그인할 수 있습니다.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "description": "로그인에 사용할 이메일 주소"
                                },
                                "password": {
                                    "type": "string",
                                    "description": "로그인에 사용할 비밀번호"
                                }
                            },
                            "required": ["email", "password"]
                        }
                    }
                ],
                "responses": {
                }
            }
        },
        "/api/user/register": {
            "post": {
                "summary": "회원가입",
                "description": "새로운 사용자를 등록합니다.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "description": "회원가입에 사용할 이메일 주소"
                                },
                                "password": {
                                    "type": "string",
                                    "description": "회원가입에 사용할 비밀번호"
                                },
                                "name": {
                                    "type": "string",
                                    "description": "회원가입에 사용할 이름"
                                },
                                "phone": {
                                    "type": "string",
                                    "description": "회원가입에 사용할 전화번호"
                                }
                            },
                            "required": ["email", "password","name","phone"]
                        }
                    }
                ],
                "responses": {

                }
            }
        },
        "/api/user/update": {
            "put": {
                "summary": "업데이트",
                "description": "로그인된 유저 정보 수정",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "Bearer {accessToken}"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "description": "회원가입에 사용할 이메일 주소"
                                },
                                "name": {
                                    "type": "string",
                                    "description": "회원가입에 사용할 이름"
                                },
                                "phone": {
                                    "type": "string",
                                    "description": "회원가입에 사용할 전화번호"
                                }
                            },
                            "required": ["email","name","phone"]
                        }
                    }
                ],
                "responses": {
                }
            }
        },
        "/api/user/delete": {
            "delete": {
                "summary": "유저 삭제",
                "description": "로그인된 유저 삭제",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "Bearer {accessToken}"
                    }
                ],
                "responses": {
                }
            }
        },
        "/api/user/profile": {
            "get": {
                "summary": "유저 정보",
                "description": "로그인된 유저 정보 불러오기",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "Bearer {accessToken}"
                    }
                ],
                "responses": {
                }
            }
        },
        "/api/course/list": {
            "get": {
                "summary": "코스리스트",
                "description": "유저 방문 코스 리스트",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "Bearer {accessToken}"
                    },
                    {
                        "name": "course_tour",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "description": "유저가 방문할 투어"
                      }
                ],
                "responses": {
                }
            }
        },
        "/api/course/qr": {
            "post": {
                "summary": "스탬프",
                "description": "유저 투어 방문확인",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "Bearer {accessToken}"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "qrCode": {
                                    "type": "string",
                                    "description": "유저가 방문한 투어"
                                }
                            },
                            "required": ["qrCode"]
                        }
                    }
                ],
                "responses": {
                }
            }
        },
        "/api/oauth/token": {
            "get": {
                "summary": "토큰",
                "description": "토큰 재발급",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "type": "string",
                        "description": "Bearer {refreshToken}"
                    }
                ],
                "responses": {
                }
            }
        }
    }
}
